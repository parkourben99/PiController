[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/home/pi/projects/PiController
ExecStart=/usr/local/bin/gunicorn --workers 3 --bind /home/pi/projects/PiController/run/gunicorn.sock PiControl.wsgi:application

[Install]
WantedBy=multi-user.target